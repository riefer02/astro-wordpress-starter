---
import BaseLayout from '@/layouts/BaseLayout.astro';
import PostCard from '@/components/PostCard.astro';
import SearchPosts from '@/components/react/SearchPosts';
import { wp } from '@/lib/wordpress';
import type { WordPressPost } from '@/types/wordpress';

// Fetch recent posts
let posts: WordPressPost[] = [];
try {
  posts = await wp.fetchPosts({ per_page: 6 });
} catch (error) {
  console.error('Failed to fetch posts:', error);
}
---

<BaseLayout
  title="Astro WordPress Starter"
  description="A modern, fast, and developer-friendly template for building headless WordPress sites with Astro"
>
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <!-- Header -->
    <header class="bg-white shadow-sm">
      <div class="container mx-auto px-4 py-6">
        <div class="flex items-center justify-between">
          <h1 class="text-3xl font-bold text-gray-900">
            Astro WordPress Starter
          </h1>
          <nav class="hidden md:flex space-x-6">
            <a
              href="#posts"
              class="text-gray-600 hover:text-blue-600 transition-colors"
            >
              Posts
            </a>
            <a
              href="#search"
              class="text-gray-600 hover:text-blue-600 transition-colors"
            >
              Search
            </a>
          </nav>
        </div>
      </div>
    </header>

    <main class="container mx-auto px-4 py-8">
      <!-- Hero Section -->
      <section class="text-center py-12">
        <h2 class="text-4xl md:text-6xl font-bold text-gray-900 mb-4">
          Modern WordPress
          <span class="text-blue-600">Made Simple</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
          A fast, modern, and developer-friendly template for building headless
          WordPress sites with Astro, React, and Shadcn/ui.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#posts"
            class="bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 transition-colors font-semibold"
          >
            View Posts
          </a>
          <a
            href="#search"
            class="bg-white text-blue-600 px-8 py-3 rounded-lg border-2 border-blue-600 hover:bg-blue-50 transition-colors font-semibold"
          >
            Search Posts
          </a>
        </div>
      </section>

      <!-- Recent Posts Section -->
      <section id="posts" class="py-12">
        <h3 class="text-3xl font-bold text-gray-900 mb-8 text-center">
          Recent Posts
        </h3>
        {
          posts.length > 0 ? (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              {posts.map((post) => (
                <PostCard post={post} />
              ))}
            </div>
          ) : (
            <div class="text-center py-12">
              <div class="bg-white rounded-lg shadow-lg p-8 max-w-md mx-auto">
                <h4 class="text-xl font-semibold text-gray-900 mb-4">
                  No Posts Found
                </h4>
                <p class="text-gray-600 mb-4">
                  Configure your WordPress API URL in the environment variables
                  to see posts here.
                </p>
                <code class="bg-gray-100 px-3 py-1 rounded text-sm">
                  WP_API_URL=https://your-wordpress-site.com/wp-json
                </code>
              </div>
            </div>
          )
        }
      </section>

      <!-- Search Section -->
      <section id="search" class="py-12">
        <h3 class="text-3xl font-bold text-gray-900 mb-8 text-center">
          Search Posts
        </h3>
        <div class="max-w-2xl mx-auto">
          <SearchPosts client:load wpApiUrl={import.meta.env.WP_API_URL} />
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-8">
      <div class="container mx-auto px-4 text-center">
        <p class="text-gray-400">
          Built with <span class="text-blue-400">Astro</span>, <span
            class="text-blue-400">React</span
          >, and <span class="text-blue-400">Shadcn/ui</span>
        </p>
      </div>
    </footer>
  </div>
</BaseLayout>
